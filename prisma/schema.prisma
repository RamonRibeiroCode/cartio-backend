generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String @id @default(uuid())
  name         String
  email        String @unique
  password     String
  phone        String?
  address      String?
  state        String?
  city         String?
  imageKey     String?
  createdAt    DateTime @default(now())
}

model Product {
  id           String @id @default(uuid())
  name         String
  slug         String
  images       String[]
  category     Category @relation(fields: [categoryId], references: [id])
  categoryId   String
  listPrice    Float
  sellingPrice Float
  quantity     Int
  description  String?
  expiresIn    DateTime?
  validIn      DateTime?
  status       String
  createdAt    DateTime @default(now())
}

model Category {
  id           String @id @default(uuid())
  name         String
  product      Product[]    
}